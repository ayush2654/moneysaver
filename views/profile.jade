    br
    br
    h1(style='text-align:center')
      | Hello
      strong  #{result[0].firstname}  #{result[0].lastname}
      |  !!....Welcome to your profile
    br
    br
    .container
      .table-responsive
        table.table
          thead
            tr
              th Info
              th Details
          tbody
          - each item in rows
            tr
              td Firstname
              td= result[0].firstname
            tr
              td Lastname
              td=result[0].lastname
            tr
              td Username
              td=result[0].username
            tr
              td Email
              td=rows[0].email
            tr
              td Password
              td=rows[0].password
            tr
              td Address
              td=add[0].street + "     " + add[0].city +"      "+add[0].country
            tr
              td Mobile no
              td=rows[0].phone
            tr
              td zipcode
              td=add[0].zipcode
      br
      br
      a.btn.btn-success.center-block.btn-lg(href='#')  Transactions
